<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Dzikirku"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dzikirku"
        tools:targetApi="31">


        <activity
            android:name=".ui.EditProfileActivity"
            android:exported="true" >
        </activity>
        <activity
            android:name=".ui.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.auth.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".ui.ProfileActivity"
            android:exported="false"
            android:label="Profile" />
        <activity
            android:name=".ui.DzikirSetiapSaat"
            android:exported="false"
            android:label="@string/dzikir_setiap_saat" />
        <activity
            android:name=".ui.DzikirPagiPetangActivity"
            android:exported="false"
            android:label="@string/dzikir_pagi_dan_petang" />
        <activity
            android:name=".ui.DzikirHarianActivity"
            android:exported="false"
            android:label="@string/dzikir_harian" />
        <activity
            android:name=".ui.DzikirSholatActivity"
            android:exported="false"
            android:label="@string/dzikir_sholat" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>